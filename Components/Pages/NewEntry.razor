@page "/newentry"
@attribute [StreamRendering]

<PageTitle>New Entry</PageTitle>

<h1>Add New Entry</h1>

<div style="display: grid; grid-template-columns: 1.5fr 1fr 1fr 1fr 1fr 1fr; gap: 5px; align-items: center; width: 100%; box-sizing: border-box;">
  <!-- Titles Row -->
  <h3 style="margin: 0; text-align: center; ">Flowers</h3>
  <h3 style="margin: 0; text-align: center; ">Units</h3>
  <h3 style="margin: 0; text-align: center; ">Cost</h3>
  <h5 style="margin: 0; text-align: center; "><u>Date</u></h5>
  <h5 style="margin: 0; text-align: center; "><u>Stem Cost</u></h5>
  <h5 style="margin: 0; text-align: center; "><u>Change Since Last Entry</u></h5>

  <!-- Row 1 -->
  <select>
    <option>Carolina Sapphire</option>
    <option>Veronica</option>
    <option>Option 3</option>
  </select>
  <input type="number" placeholder="Units">
  <input type="number" placeholder="Cost">
  <input type="date" style="margin-left: 40%;">
  <h6 style="text-align: center; margin-right: 5%;">0.43</h6>
  <h6 style="text-align: center; margin: 0;">3%</h6>

  <!-- Row 2 -->
  <select>
    <option>Carolina Sapphire</option>
    <option>Veronica</option>
    <option>More</option>
  </select>
  <input type="number" placeholder="Units">
  <input type="number" placeholder="Cost">
  <input type="date"style="margin-left: 40%;">
  <h6 style="text-align: center; margin-right: 5%;">4.83</h6>
  <h6 style="text-align: center; margin: 0;">12%</h6>
</div>

<!-- New Line Button -->
<div style="margin-top: 10px; text-align: left;">
  <button style="background-color: #eb3a9b; color: white; padding: 10px 20px; border: none; border-radius: 5px; font-size: 16px;">New Line</button>
</div>

<!-- Save Button -->
<div style="margin-top: 20px; text-align: left;">
  <button style="background-color: #eb3a9b; color: white; padding: 10px 20px; border: none; border-radius: 5px; font-size: 16px;">Save</button>
</div>
