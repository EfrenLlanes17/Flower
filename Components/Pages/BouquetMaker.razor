@page "/bouquetmaker"
@rendermode InteractiveServer

<PageTitle>Bouquet Maker</PageTitle>
@using System

<h1>Bouquet Maker</h1>

<div class="container">
    <div class="headers">
        <span>Contents</span>
        <span>Amount</span>
        <span>Total Retail</span>
    </div>

    <!-- Data Rows -->
    <div class="data-row">
        <select>
            <option>Rose</option>
            <option>Tulip</option>
            <option>Daisy</option>
        </select>
        <input type="number" placeholder="Amount">
        <span>$12.00</span>
    </div>
    <div class="data-row">
        <select>
            <option>Jar 6</option>
            <option>Vase 8</option>
            <option>Box 3</option>
        </select>
        <input type="number" placeholder="Amount">
        <span>$12.00</span>
    </div>

    <button id="add-line">New Line</button>

    <h2>Additional Costs</h2>
    <div class="additional-costs">
        <label>
            Labor Costs: $<input type="number" placeholder="0.00" step="0.01">
        </label>
        <label>
            Misc Costs: $<input type="number" placeholder="0.00" step="0.01">
        </label>
    </div>

    <h2>Totals</h2>
    <div class="totals">
        <label>
            Bouquet Name: <input type="text" placeholder="Name">
        </label>
        <div>
            <span>Total Cost: </span>$<span id="totalCostText">0.00</span>
        </div>
        <label>
            Retail Price: $<input type="number" placeholder="0.00" step="0.01">
        </label>
        <div>
            <span>Profit: </span>$<span id="profitText">0.00</span>
        </div>
    </div>

    <button id="save-recipe">Save To Recipes</button>
</div>